<UserControl
    x:Class="Flow.Launcher.Plugin.UninstallerPlus.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Flow.Launcher.Plugin.UninstallerPlus"
    d:DataContext="{d:DesignInstance Type=viewModels:Settings}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="{StaticResource SettingPanelMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <CheckBox
            Grid.Row="0"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_microsoft}"
            IsChecked="{Binding FilterShowMicrosoft, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="1"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_advanced_display_orphans}"
            IsChecked="{Binding AdvancedDisplayOrphans, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="2"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_system_components}"
            IsChecked="{Binding FilterShowSystemComponents, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="3"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_protected}"
            IsChecked="{Binding FilterShowProtected, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="4"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_tweaks}"
            IsChecked="{Binding FilterShowTweaks, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="5"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_updates}"
            IsChecked="{Binding FilterShowUpdates, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="6"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_win_features}"
            IsChecked="{Binding FilterShowWinFeatures, Mode=TwoWay}" />

        <CheckBox
            Grid.Row="7"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            VerticalAlignment="Center"
            Content="{DynamicResource flowlauncher_plugin_uninstallerplus_filter_show_store_apps}"
            IsChecked="{Binding FilterShowStoreApps, Mode=TwoWay}" />

    </Grid>
</UserControl>