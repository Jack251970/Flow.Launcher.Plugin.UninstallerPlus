<Window
    x:Class="BulkCrapUninstaller.WPF.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BulkCrapUninstaller.WPF.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UninstallPlus Test"
    Width="800"
    Height="450"
    Closed="Window_Closed"
    Closing="Window_Closing"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar
            x:Name="ProgressBar"
            Grid.Row="0"
            Height="30"
            Margin="4"
            Visibility="Collapsed" />
        <TextBlock
            x:Name="TextBlock"
            Grid.Row="0"
            Height="30"
            Margin="4"
            Visibility="Collapsed" />
        <ProgressBar
            x:Name="SubProgressBar"
            Grid.Row="1"
            Height="30"
            Margin="4"
            Visibility="Collapsed" />
        <TextBlock
            x:Name="SubTextBlock"
            Grid.Row="1"
            Height="30"
            Margin="4"
            Visibility="Collapsed" />
        <ScrollViewer Grid.Row="2">
            <TextBlock x:Name="UninstallerListTextBlock" Margin="4" />
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Height="30"
            Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="0,0,4,0"
                VerticalAlignment="Center"
                Text="Please input uninstaller name:" />
            <Image
                x:Name="Image"
                Grid.Column="1"
                Width="30"
                Height="30"
                VerticalAlignment="Center" />
            <TextBox
                x:Name="UninstallTextBox"
                Grid.Column="2"
                Margin="4,0,4,0"
                VerticalAlignment="Center" />
            <Button
                x:Name="UninstallButton"
                Grid.Column="3"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Click="UninstallButton_Click"
                Content="Uninstall" />
        </Grid>
    </Grid>
</Window>